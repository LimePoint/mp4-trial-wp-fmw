                        "domainList": [
                            {
                                "name": "<%= @obpoid['wls_domain_name'] %>",
                                "locationPath": "<%= oid_admin_server_top %>",
                                "adminUser": "<%= @obpoid['wls_admin_user'] %>",
                                "adminPassword": "<%= PasswordVault.get_password(password_vault_name + '/' + asset_code, @obpoid['wls_admin_user'] ) %>",
