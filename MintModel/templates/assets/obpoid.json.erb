                                  }
                                ],
                                "middlewareList": [
                                    {
                                        "installationName": "oid",
                                        "targetList": [
                                            {
                                              "type": "Server",
                                              "names":
                                              [
                                                "AdminServer"
                                              ]
                                            }
                                        ]
                                    }
                                ],
                                "configurationList": [

                                     <%= render "common-settings-configs.erb"  %>
                                     ,
									 {
                                        "resourceName": "UseKSSForDemo",
                                        "type": "SecurityConfiguration"
                                    },
                                    {
                                        "resourceName": "DefaultAuthenticator",
                                        "type": "AuthenticationProvider",
                                        "attributes": {
                                            "realmName": "myrealm"
                                        }
                                    }
                                    <% if !is_running_on_cloud %>
                                    ,
                                    {
                                        "resourceName": "GIDAuthenticator",
                                        "type": "AuthenticationProvider",
                                        "attributes": {
                                            "realmName": "myrealm"
                                        }
                                    }
                                    <% end %>
                                ],
                                "templateList": [
                                    {
                                        "name": "OracleInternetDirectory"
                                    }
                                ],
                                "repositoryList": [
                                    {
                                        "componentList": [
                                            "OID",
                                            "OPSS",
                                            "WLS"
                                        ],
                                        "id": "rcu01",
                                        "dbName": "<%= environment_name %><%= asset_code %>db",
                                        "prefix": "<%= @obpoid['database']['rcu_schema_prefix'].upcase %>",
                                        "dbUser": "<%= @obpoid['database']['sysdba_username'].upcase %>",
                                        "schemaPassword": "<%= PasswordVault.get_password(password_vault_name + '/' + asset_code, @obpoid['database']['rcu_schema_prefix'].upcase ) %>",
                                        "defaultRepository": "true"
                                    }
                                ],
                                "attributes": {
                                    "newworld": "true",
                                    "serverStartMode": "prod",
                                    "wls.production.mode": "prod",
                                    "backupEnvironmentName": "<%= environment_name %>",
                                    "environment.name": "<%= environment_name %>",
                                    "tlogsLocationPath": "<%= base_domain_path %>/${/domain.name}",
                                    "wls.tlogs.location.path": "<%= base_domain_path %>/${/domain.name}",
                                    "odlLogLocation": "<%= log_location_path %>/${/domain.name}",
                                    "wls.odl.log.location": "<%= log_location_path %>/${/domain.name}",
                                    "wls.odl.log.retentionPeriod": "<%= @common['odl_log_retentionPeriod'] %>",
                                    "defaultJMSLogLocation": "<%= log_location_path %>/${/domain.name}",
                                    "wls.admin.listen.port.admin": "<%= @obpoid['admin']['listen_port_admin'] %>"
                                }
                            }
                        ],
                        "hostInstallationList": [
                            {
                                "installationName": "oid",
                                "hostIdentifierList": [
                                    "<%= @obpoid['hostnameList'][0] %>"
                                ]
                            }
                        ],
                        "transferList": [

                            <%= render "common-certs-transfer.erb",
                                :variables => {
                                    :host_identifier => @obpoid['hostnameList'][0],
                                    :environment_name => environment_name,
                                    :asset_code => asset_code,
                                    :keystore_name => @obpoid['hostnameList'][0][0...-2],
                                    :certs_source_path => @common['certs_source'],
                                    :cert_destination_path => certs_location_path,
                                    :truststore => @common['trustStore']
                                }
                            %>,
                            <% @obpoid['hostnameList'].each_with_index do |hostname, index| %>
                            {
                                "name": "Wallet_ldap<%= index + 1 %>",
                                "hostIdentifierList": [
                                    "<%= hostname  %>"
                                ],
                                "sourceFile": "<%= @common['certs_source'] %>/<%= environment_name %>/<%= hostname %>_wallet",
                                "destinationFile": "<%= certs_location_path %>/oid<%= index + 1 %>/<%= asset_code %>_wallet/cwallet.sso",
                                "permissions": "600",
                                "transferWhenList": [
                                    "pre-online"
                                ],
                                "attributes": {
                                    "scaleout": "false"
                                }
                            },
                            <% end %>
                            <%= render "common-jdk-policy-transfer.erb",
                                :variables => {
                                    :host_identifier => @obpoid['hostnameList'][0],
                                    :environment_name => environment_name,
                                    :asset_code => asset_code,
                                    :jdk_version => jdk_version,
                                    :java_install_path => java_install_path
                                }
                            %>
                            ,
                            <%= render "common-transfer-ovd-keystore.erb",
                                :variables => {
                                    :environment_name => environment_name,
                                    :host_identifier => @obpoid['hostnameList'][0],
                                    :certs_source_path => @common['certs_source'] ,
                                    :admin_server_top => oid_admin_server_top,
                                    :domain_name => @obpoid['wls_domain_name']
                                }
                            %>
                        ],
                        "executeList": [
                            {
                                "name": "SchemaLoad",
                                "hostIdentifierList": [
                                    "<%= @obpoid['hostnameList'][0] %>"
                                ],
                                "sourceFile": "cinc-client -c $HOME/chef/client.rb -o 'recipe[obp-environmint-custom::oid-content-load]' -l info",
                                "executeWhenList": [
                                    "post-online"
                                ],
                                "attributes": {
                                    "scaleout": "false"
                                }
                            },
							{
                                "name": "security-config",
                                "hostIdentifierList": [
                                    "<%= @obpoid['hostnameList'][0] %>"
                                ],
                                "sourceFile": "cinc-client -c $HOME/chef/client.rb -o 'recipe[obp-environmint-custom::security_config_param]' -l info",
                                "executeWhenList": [
                                    "post-online"
                                ],
                                "attributes": {
                                    "scaleout": "false"
                                }
                            },
                            {
                                "name": "Update-ldap",
                                "hostIdentifierList": [
                                    "<%= @obpoid['hostnameList'][0] %>"
                                ],
                                "sourceFile": "cinc-client -c $HOME/chef/client.rb -o 'recipe[obp-environmint-custom::update-oid-cid-setDomainEnv]' -l info",
                                "executeWhenList": [
                                    "post-online"
                                ],
                                "attributes": {
                                    "scaleout": "false"
                                }
                            },
                          <% if !is_running_on_cloud %>
                            <% @obpoid['hostnameList'].each do |host| %>
                            {
                                "name": "EncryptDBConnectivity",
                                "hostIdentifierList": [
                                    "<%= host %>"
                                ],
                                "sourceFile": "cinc-client -c $HOME/chef/client.rb -o 'recipe[obp-environmint-custom::internet-directory-dbssl]' -l info",
                                "executeWhenList": [
                                    "post-online"
                                ],
                                "attributes": {
                                    "scaleout": "false"
                                }
                            },
                            <% end %>
                          <% end %>
                            <%= render "common-run-wlst.erb",
                                  :variables => {
                                      :name => "deleteDefaultAuditor",
                                      :host_identifier => @obpoid['hostnameList'][0],
                                      :wlst_command => "#{fmw_install_path}/oracle_common/common/bin/wlst.sh",
                                      :script => "#{@common['custom_source']}/common/deleteDefaultAuditor.py",
                                      :t3_connect_url => "t3://#{@obpoid['admin']['listen_address']}#{@obpoid['dns_domain_name']}:#{@obpoid['admin']['listen_port']}",
                                      :admin_username => @obpoid['wls_admin_user'],
                                      :admin_password => PasswordVault.get_password(password_vault_name + '/' + asset_code, @obpoid['wls_admin_user']),
                                      :args => "#{@obpoid['wls_domain_name']}",
                                      :when => 'pre-online'
                              }
                            %>
                            ,
                            <%= render "common-run-wlst.erb",
                                  :variables => {
                                      :name => "updateSIEMAuditor",
                                      :host_identifier => @obpoid['hostnameList'][0],
                                      :wlst_command => "#{fmw_install_path}/oracle_common/common/bin/wlst.sh",
                                      :script => "#{@common['custom_source']}/common/updateSIEMAuditor.py",
                                      :t3_connect_url => "t3://#{@obpoid['admin']['listen_address']}#{@obpoid['dns_domain_name']}:#{@obpoid['admin']['listen_port']}",
                                      :admin_username => @obpoid['wls_admin_user'],
                                      :admin_password => PasswordVault.get_password(password_vault_name + '/' + asset_code, @obpoid['wls_admin_user']),
                                      :args => "#{@obpoid['wls_domain_name']} #{asset_code}",
                                      :when => 'post-online'
                              }
                            %>
                        ]
                    ,
        "databaseList": [
            {
                "name": "<%= environment_name %><%= asset_code %>db",
                "port": "<%= @obpoid['database']['listen_port'] %>",
                "serviceName": "<%= @obpoid['database']['service_name'] %>",
                "hostIdentifier": "db_server",
                "schemaList": [
                  {
                    "name": "<%= @obpoid['database']['sysdba_username'].upcase %>",
                    "password": "<%= PasswordVault.get_password(password_vault_name + '/' + asset_code, @obpoid['database']['sysdba_username'].upcase) %>"
                  }
                ],
                "attributes": {
                    "rcu.datafile.initialsize": "200M",
                    "rcu.extra.parameters": " -encryptTablespace <%= @obpoid['database'].key?('encryption') ? @obpoid['database']['encryption'] : 'false' %>",
                    "jdbcUrl": "jdbc:oracle:thin:@(DESCRIPTION=(ADDRESS=(PROTOCOL=TCP)(Host=${_.host.address})(Port=${_.port}))(CONNECT_DATA=(SERVER = DEDICATED)(SERVICE_NAME=${_.serviceName})))"
                }
            }
        ],
        "resourceList": [

            <%= render "common-settings-resources.erb",
                :variables => {
                    :environment_name => environment_name,
                    :password_vault_name => password_vault_name,
                    :asset_code => asset_code,
                    :domain_name => @obpoid['wls_domain_name'],
                    :log_location_path => log_location_path,
                    :certs_location_path => certs_location_path,
                    :admin_kestore_alias => @obpoid['hostnameList'][0],
                    :managed_keystore_alias => '%ListenAddress/noprefix%',
                    :keystore_name => @obpoid['hostnameList'][0][0...-2],
                    :common => @common,
                    :frontend => @obpoid['frontend'],
                    :database => @obpoid['database'],
                    :set_dual_site_url => @obpoid['database'].key?('set_dual_site_url') ? @obpoid['database']['set_dual_site_url'].downcase : "false",
                    :enable_dbssl => @common.key?('enable_dbssl') ? @common['enable_dbssl'].downcase : "false"
                }
            %>
            ,
			{
                "name": "UseKSSForDemo",
                "type": "SecurityConfiguration",
                "attributes": {
                    "UseKSSForDemo": "false"
                }
            },
            {
                "name": "DefaultAuthenticator",
                "type": "AuthenticationProvider",
                "attributes": {
                    "subType": "null",
                    "ControlFlag": "SUFFICIENT"
                }
            }
            ,
            <% if !is_running_on_cloud %>
            <%= render "common-gid-authenticator.erb",
