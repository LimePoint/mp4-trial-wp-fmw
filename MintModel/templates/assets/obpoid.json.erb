                                    "listenAddressPortSSL": "<%= @obpoid['admin']['listen_port_ssl'] %>",
                                    "targetName": "<%= asset_code[3..-1] %>AdminServer"
                                },
                                "machineList": [
                                    {
                                        "name": "oidhost1",
                                        "nodeManagerName": "nm-<%= @obpoid['hostnameList'][0] %>"
                                    }
                                ],
                                "systemComponentList": [
                                  {
                                    "name": "oid1",
                                    "componentType": "OracleInternetDirectory",
                                    "machineName": "oidhost1",
