                                          "OracleInternetDirectory": {
                                        "Hostname": "${/machine.nodemanager.host.basename}<%= @obpoid['dns_domain_name'] %>",
                                        "ListenPort": "<%= @obpoid['oidldap']['listen_port'] %>",
                                        "ListenPortSSL": "<%= @obpoid['oidldap']['listen_port_ssl'] %>",
